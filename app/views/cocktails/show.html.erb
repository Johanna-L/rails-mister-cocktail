<div class="container col-8 mt-3">
  <h1 class="py-3"><%= @cocktail.name.capitalize %></h1>

  <div class="d-flex">

    <%= image_tag "https://source.unsplash.com/featured/?cocktail,#{@cocktail.name.split.first}", alt: "coquetail", class:"cocktail-image mr-5" %>

    <div class="d-flex flex-column">
    <% if @cocktail.doses.any? %>
      <ul class="list-group">
        <% @cocktail.doses.each do |dose| %>
          <li class="list-group-item d-flex">
            <div class="px-3"><%= dose.ingredient.name %></div>
            <div class="px-3"><%= dose.description %></div>
            <div class="px-3"><%= link_to 'Delete', dose_path(dose),
            method: :delete %></div>
          </li>
        <% end %>
      </ul>
    <% end %>
    <div class="mt-3">
    <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class:'btn btn-primary'  %>
    <%= link_to 'Back to list', cocktails_path, class:'btn btn-primary' %>
  </div>
  </div>
  </div>
</div>


